{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
     {% block content %}
         <div class="content-body">
         <div class="row">
         </div>
    <h1>Comments list
    </h1>
         <section id="column-selectors">
         <div class="row">

             <div class="col-12">
         <div class="card">

         <div class="card-content">
         <div class="card-body card-dashboard">
         <div class="table-responsive">
    <table class="table table-striped dataex-html5-selectors">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Nblikes</th>
                <th>post</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.nblikes }}</td>
                <td>{{ comment.post |raw}}</td>
                <td style="text-align: center;">


                    <a  href="{{ path('comment_edit', {'id': comment.id}) }}"><i class="feather icon-edit"></i></a> &nbsp;&nbsp;
                    <a  href="{{ path('comment_show', {'id': comment.id}) }}"><i class="feather icon-eye"></i></a>
                    {{ include('comment/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

         </div>
         </div>
         </div>
         </div>
         </div>
         </div>
         </section>


         </div>
{% endblock %}
{% endblock %}