<div class="card-content">
    <div class="card-body">

        <div class="form-body">
            <div class="row">

                {{ form_start(form) }}

                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-md-4">
                            <!-- {{ form_label(form.content,"Content of the cmnt") }} -->
                            <label for="{{ form.content.vars.id }}">Content of the comment </label>
                        </div>
                        <div class="col-md-8">
                            <fieldset class="form-group">

                                <!-- {{ form_widget(form.content, {'attr': {'class': 'form-control char-textarea'}}) }} -->
                                <input type="text" class="form-control" id="{{ form.content.vars.id }}"
                                       name="{{ form.content.vars.full_name }}" value="{{ form.content.vars.value }}">
                                {{ form_errors(form.content) }}
                            </fieldset>

                        </div>
                    </div>
                </div>

                <br>


                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-md-4">
                            <!--{{ form_label(form.nblikes,"Nbr of likes") }}-->
                            <label for="{{ form.nblikes.vars.id }}">Number of likes</label>
                        </div>
                        <div class="col-md-8">
                            <fieldset class="form-group">

                                <!--{{ form_widget(form.nblikes) }}-->
                                <div class="d-inline-block mb-1">
                                    <div class="input-group">
                                        <input type="number" class="touchspin" id="{{ form.nblikes.vars.id }}"
                                               name="{{ form.nblikes.vars.full_name }}" value="{{ form.nblikes.vars.value }}">
                                    </div>
                                </div>

                            </fieldset>
                        </div>
                    </div>
                </div>




                <br>


                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-md-4">
                            <!--{{ form_label(form.post,"post concerned") }}-->
                            <label for="{{ form.post.vars.id }}">Post concerned</label>
                        </div>
                        <div class="col-md-8">
                            <fieldset class="form-group">
                                <div class="btn-group dropdown mr-1 mb-1">
                               {{ form_widget(form.post) }}

                                </div>


                            </fieldset>
                        </div>
                    </div>
                </div>






                <button class="btn btn-outline-success mr-1 mb-1">{{ button_label|default('Save') }}</button>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
</div>




